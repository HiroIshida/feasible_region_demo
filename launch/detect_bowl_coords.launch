<launch>
  <arg name="input_cloud" default="/kinect_head/depth_registered/half/points"/>
  <arg name="rosbag" default="false" />
  <arg name="rviz" default="true" />
  <!--node type="rviz" name="rviz" pkg="rviz" args="-d $(find friedegg_generator)/config/basic.rviz" if="$(arg rviz)"/-->

  <node name="tf_transform_cloud"
          pkg="nodelet" type="nodelet"
          args="standalone jsk_pcl_utils/tf_transform_cloud">
          <remap from="~input" to="$(arg input_cloud)"/>
      <rosparam>
        target_frame_id: base_link
      </rosparam>
  </node>
</launch>
